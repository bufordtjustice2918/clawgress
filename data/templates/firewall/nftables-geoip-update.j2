#!/usr/sbin/nft -f

{% if firewall_sets.v4 is vyos_defined %}
{%     for setname, ip_list in firewall_sets.v4.items() %}
flush set ip vyos_filter {{ setname }}
{%     endfor %}

table ip vyos_filter {
{%     for setname, ip_list in firewall_sets.v4.items() %}
    set {{ setname }} {
        type ipv4_addr
        flags interval
        elements = { {{ ','.join(ip_list) }} }
    }
{%     endfor %}
}
{% endif %}

