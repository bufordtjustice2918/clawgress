<?xml version="1.0"?>
<interfaceDefinition>
  <node name="service">
    <children>
      <node name="clawgress" owner="${vyos_conf_scripts_dir}/clawgress.py">
        <properties>
          <help>Clawgress egress control service</help>
          <priority>900</priority>
        </properties>
        <children>
          <leafNode name="enable">
            <properties>
              <help>Enable Clawgress service</help>
              <valueless/>
            </properties>
          </leafNode>
          <leafNode name="listen-address">
            <properties>
              <help>Local address for DNS listener (default: all)</help>
              <valueHelp>
                <format>ipv4</format>
                <description>IPv4 address to listen on</description>
              </valueHelp>
              <valueHelp>
                <format>ipv6</format>
                <description>IPv6 address to listen on</description>
              </valueHelp>
              <multi/>
            </properties>
          </leafNode>
          <node name="policy">
            <properties>
              <help>Policy configuration</help>
            </properties>
            <children>
              <tagNode name="domain">
                <properties>
                  <help>Allowed domain</help>
                  <valueHelp>
                    <format>fqdn</format>
                    <description>Domain name to allow</description>
                  </valueHelp>
                </properties>
                <children>
                  <leafNode name="label">
                    <properties>
                      <help>Policy label for this domain (e.g., llm-provider)</help>
                      <constraint>
                        <regex>^[a-zA-Z0-9_-]+$</regex>
                      </constraint>
                    </properties>
                  </leafNode>
                  <node name="time-window">
                    <properties>
                      <help>Time window for this domain</help>
                    </properties>
                    <children>
                      <leafNode name="day">
                        <properties>
                          <help>Allowed day of week</help>
                          <valueHelp>
                            <format>mon|tue|wed|thu|fri|sat|sun</format>
                            <description>Day of week</description>
                          </valueHelp>
                          <constraint>
                            <regex>^(mon|tue|wed|thu|fri|sat|sun)$</regex>
                          </constraint>
                          <multi/>
                        </properties>
                      </leafNode>
                      <leafNode name="start">
                        <properties>
                          <help>Start time (HH:MM)</help>
                          <constraint>
                            <regex>^([01][0-9]|2[0-3]):[0-5][0-9](:[0-5][0-9])?$</regex>
                          </constraint>
                        </properties>
                      </leafNode>
                      <leafNode name="end">
                        <properties>
                          <help>End time (HH:MM)</help>
                          <constraint>
                            <regex>^([01][0-9]|2[0-3]):[0-5][0-9](:[0-5][0-9])?$</regex>
                          </constraint>
                        </properties>
                      </leafNode>
                    </children>
                  </node>
                </children>
              </tagNode>
              <node name="time-window">
                <properties>
                  <help>Time window for allowed traffic</help>
                </properties>
                <children>
                  <leafNode name="day">
                    <properties>
                      <help>Allowed day of week</help>
                      <valueHelp>
                        <format>mon|tue|wed|thu|fri|sat|sun</format>
                        <description>Day of week</description>
                      </valueHelp>
                      <constraint>
                        <regex>^(mon|tue|wed|thu|fri|sat|sun)$</regex>
                      </constraint>
                      <multi/>
                    </properties>
                  </leafNode>
                  <leafNode name="start">
                    <properties>
                      <help>Start time (HH:MM)</help>
                      <constraint>
                        <regex>^([01][0-9]|2[0-3]):[0-5][0-9](:[0-5][0-9])?$</regex>
                      </constraint>
                    </properties>
                  </leafNode>
                  <leafNode name="end">
                    <properties>
                      <help>End time (HH:MM)</help>
                      <constraint>
                        <regex>^([01][0-9]|2[0-3]):[0-5][0-9](:[0-5][0-9])?$</regex>
                      </constraint>
                    </properties>
                  </leafNode>
                </children>
              </node>
              <leafNode name="ip">
                <properties>
                  <help>Allowed IP or network</help>
                  <valueHelp>
                    <format>ipv4net</format>
                    <description>IPv4 network (e.g., 1.2.3.0/24)</description>
                  </valueHelp>
                  <valueHelp>
                    <format>ipv6net</format>
                    <description>IPv6 network</description>
                  </valueHelp>
                  <multi/>
                </properties>
              </leafNode>
              <leafNode name="port">
                <properties>
                  <help>Allowed port</help>
                  <valueHelp>
                    <format>u32:1-65535</format>
                    <description>Port number</description>
                  </valueHelp>
                  <multi/>
                </properties>
              </leafNode>
              <leafNode name="rate-limit-kbps">
                <properties>
                  <help>Egress rate limit (Kbps)</help>
                  <valueHelp>
                    <format>u32:1-100000000</format>
                    <description>Limit in Kbps (applies to allowed egress)</description>
                  </valueHelp>
                </properties>
              </leafNode>
              <node name="proxy">
                <properties>
                  <help>TLS proxy/SNI policy controls</help>
                </properties>
                <children>
                  <leafNode name="mode">
                    <properties>
                      <help>Proxy mode</help>
                      <valueHelp>
                        <format>disabled|sni-allowlist</format>
                        <description>Disable proxy matching or enforce TLS SNI allowlist</description>
                      </valueHelp>
                      <constraint>
                        <regex>^(disabled|sni-allowlist)$</regex>
                      </constraint>
                    </properties>
                  </leafNode>
                  <leafNode name="domain">
                    <properties>
                      <help>Allowed TLS SNI domain for proxy mode</help>
                      <valueHelp>
                        <format>fqdn</format>
                        <description>Domain name to allow via TLS SNI match</description>
                      </valueHelp>
                      <multi/>
                    </properties>
                  </leafNode>
                </children>
              </node>
              <tagNode name="host">
                <properties>
                  <help>Per-agent policy configuration</help>
                </properties>
                <children>
                  <leafNode name="source">
                    <properties>
                      <help>Source IP or network for this agent</help>
                      <valueHelp>
                        <format>ipv4net</format>
                        <description>IPv4 network (e.g., 192.168.1.10/32)</description>
                      </valueHelp>
                      <valueHelp>
                        <format>ipv6net</format>
                        <description>IPv6 network</description>
                      </valueHelp>
                      <multi/>
                    </properties>
                  </leafNode>
                  <node name="proxy">
                    <properties>
                      <help>Host-level TLS proxy/SNI controls</help>
                    </properties>
                    <children>
                      <leafNode name="mode">
                        <properties>
                          <help>Proxy mode</help>
                          <valueHelp>
                            <format>disabled|sni-allowlist</format>
                            <description>Disable proxy matching or enforce TLS SNI allowlist</description>
                          </valueHelp>
                          <constraint>
                            <regex>^(disabled|sni-allowlist)$</regex>
                          </constraint>
                        </properties>
                      </leafNode>
                      <leafNode name="domain">
                        <properties>
                          <help>Allowed TLS SNI domain for this host</help>
                          <valueHelp>
                            <format>fqdn</format>
                            <description>Domain name to allow via TLS SNI match</description>
                          </valueHelp>
                          <multi/>
                        </properties>
                      </leafNode>
                    </children>
                  </node>
                  <node name="exfil">
                    <properties>
                      <help>Exfiltration caps per domain</help>
                    </properties>
                    <children>
                      <tagNode name="domain">
                        <properties>
                          <help>Domain for exfiltration cap</help>
                          <valueHelp>
                            <format>fqdn</format>
                            <description>Domain name</description>
                          </valueHelp>
                        </properties>
                        <children>
                          <leafNode name="bytes">
                            <properties>
                              <help>Byte limit per time period</help>
                              <valueHelp>
                                <format>u32:1-4294967295</format>
                                <description>Byte limit</description>
                              </valueHelp>
                            </properties>
                          </leafNode>
                          <leafNode name="period">
                            <properties>
                              <help>Time period for byte limit</help>
                              <valueHelp>
                                <format>second|minute|hour|day</format>
                                <description>Time unit</description>
                              </valueHelp>
                              <constraint>
                                <regex>^(second|minute|hour|day)$</regex>
                              </constraint>
                            </properties>
                          </leafNode>
                        </children>
                      </tagNode>
                    </children>
                  </node>
                </children>
              </tagNode>
            </children>
          </node>
          <node name="logging">
            <properties>
              <help>Logging configuration</help>
            </properties>
            <children>
              <leafNode name="facility">
                <properties>
                  <help>Syslog facility for RPZ logs</help>
                  <valueHelp>
                    <format>local0-local7</format>
                    <description>Syslog facility</description>
                  </valueHelp>
                  <constraint>
                    <regex>^(local[0-7])$</regex>
                  </constraint>
                </properties>
              </leafNode>
              <leafNode name="deny-log">
                <properties>
                  <help>Log denied DNS queries</help>
                  <valueless/>
                </properties>
              </leafNode>
            </children>
          </node>
        </children>
      </node>
    </children>
  </node>
</interfaceDefinition>
