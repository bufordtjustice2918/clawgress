# T7644:
#   FRR 10.5 doesn't have ip protocols:
#   - connected
#   - kernel
#   - table
#
#   Remove them from
#   - system ip protocol
#   - system ipv6 protocol

from vyos.configtree import ConfigTree

bases = [
    ['system', 'ip', 'protocol'],
    ['system', 'ipv6', 'protocol'],
]
remove_ip_protocols = ['connected', 'kernel', 'table']

def migrate(config: ConfigTree) -> None:
    for base in bases:
        if not config.exists(base):
            continue

        # Iterate over all ip protocols to remove
        for protocol in remove_ip_protocols:
            if config.exists(base + [protocol]):
                config.delete(base + [protocol])
