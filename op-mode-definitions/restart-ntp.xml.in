<?xml version="1.0"?>
<interfaceDefinition>
  <node name="restart">
    <children>
      <node name="ntp">
        <properties>
          <help>Restart NTP service</help>
        </properties>
        <command>bash -c 'if cli-shell-api existsActive service ntp; then systemctl restart chrony.service; else echo "Service NTP not configured"; fi'</command>
      </node>
    </children>
  </node>
</interfaceDefinition>
